package com.enterprise.gateway.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.core.annotation.Order;
import org.springframework.http.HttpMethod;
import org.springframework.security.config.annotation.web.reactive.EnableWebFluxSecurity;
import org.springframework.security.config.web.server.ServerHttpSecurity;
import org.springframework.security.web.server.SecurityWebFilterChain;
import lombok.extern.slf4j.Slf4j;

// refactoring 이전

@Slf4j
@Configuration
@EnableWebFluxSecurity
public class SecurityConfig {

    @Bean
    @Order(2)  // ⭐ CORS 필터(Order 1) 다음에 실행
    public SecurityWebFilterChain securityWebFilterChain(ServerHttpSecurity http) {
        log.info("Configuring SecurityWebFilterChain for Gateway");
        
        return http
            .csrf(csrf -> csrf.disable())
            .authorizeExchange(auth -> auth
                // ⭐ OPTIONS 요청 최우선 허용
                .pathMatchers(HttpMethod.OPTIONS, "/**").permitAll()
                
                // 게시판 조회
                .pathMatchers(HttpMethod.GET, "/api/boards/**").permitAll()
                .pathMatchers(HttpMethod.GET, "/boards/**").permitAll()
                
                // 게시판 작성/수정/삭제
                .pathMatchers(HttpMethod.POST, "/api/boards/**").authenticated()
                .pathMatchers(HttpMethod.PUT, "/api/boards/**").authenticated()
                .pathMatchers(HttpMethod.DELETE, "/api/boards/**").authenticated()
                
                // 인증 관련
                .pathMatchers("/api/auth/**", "/auth/**").permitAll()
                
                // 상품 조회
                .pathMatchers(HttpMethod.GET, "/api/products/**").permitAll()

                .pathMatchers("/api/orders/**").permitAll()
                
                // Actuator
                .pathMatchers("/actuator/**").permitAll()
                
                // 나머지
                .anyExchange().authenticated()
            )
            .httpBasic(basic -> basic.disable())
            .formLogin(form -> form.disable())
            .build();
    }
}